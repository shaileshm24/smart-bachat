# SmartBachat AI Advisor Service Configuration

# Service settings
DEBUG=false

# Bachat Core Service URL
BACHAT_CORE_SERVICE_URL=http://localhost:8080

# JWT Configuration (must match other services)
JWT_SECRET=your-256-bit-secret-key-here-make-it-long-enough-for-hs256
JWT_ALGORITHM=HS256
JWT_ISSUER=smart-bachat

# OpenAI Configuration (for AI-powered recommendations)
# ⚠️ REGENERATE THIS KEY - it was exposed publicly!
OPENAI_API_KEY=
# Model Selection: "gpt-4o" (99% accuracy) or "gpt-4o-mini" (95% accuracy, cheaper)
OPENAI_MODEL=gpt-4o

# Temperature (0.0-1.0): Lower = more accurate
OPENAI_TEMPERATURE=0.3

# Analysis configuration
DEFAULT_ANALYSIS_MONTHS=6
MIN_TRANSACTIONS_FOR_ANALYSIS=10

# Recommendation thresholds
HIGH_SPENDING_THRESHOLD_PERCENT=30.0
SAVINGS_POTENTIAL_THRESHOLD_PERCENT=10.0

